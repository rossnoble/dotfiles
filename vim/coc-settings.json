{
  "$schema": "http://json-schema.org/draft-06/schema",
  "description": "Configuration file for coc.nvim",

  // TS Server
  "tsserver.enable": true,
  "tsserver.formatOnType": false,
  "tsserver.autoFixOnSave": true,

  // Diagnostics
  "diagnostic.enabled": true,
  "diagnostic.refreshOnInsertMode": false,

  // Other configs
  // "suggest.autoTrigger": "none",
  "suggest.autoTrigger": "trigger",
  "suggest.disableMenu": true,
  "suggest.floatEnable": false,
  // Don't pre-select first suggestion
  "suggest.noselect": true,

  "signature.enabled": false,
  "additionalProperties": false,

  // Workspaces
  "workspace.bottomUpFiletypes": ["typescript"],
  "workspace.workspaceFolderCheckCwd": false,

  // Conquerer of Code
  "coc.source.typescript.enable": false,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.messageLevel": "error",
  "coc.preferences.rootPatterns": ["tsconfig.json"],

  "coc.source.file.ignorePatterns": [
    "node_modules"
  ],
  "coc.source.buffer.ignoreGitignore": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Prettier
  "prettier.bracketSpacing": true,

  // ES Lint
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact", "ruby"],

  // TypeScript
  "typescript.suggest.autoImports": false,
  "typescript.format.enabled": true,

  // HTML
  "html.autoClosingTags": false,
  "html.format.wrapAttributes": false,

  // Solar Graph for Ruby
  "solargraph.completion": true,
  "solargraph.formatting": true,
  "solargraph.commandPath": "~/.gem/ruby/2.7.7/gems/solargraph-0.49.0/bin/solargraph"
}
