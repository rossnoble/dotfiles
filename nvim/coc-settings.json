{
  "$schema": "http://json-schema.org/draft-06/schema",
  "description": "Configuration file for coc.nvim",
  "additionalProperties": false,
  "http.proxySupport": "off",
  "signature.enabled": true,

  "tsserver.enable": true,
  "tsserver.formatOnType": true,
  "tsserver.autoFixOnSave": true,

  "diagnostic.enabled": true,
  "diagnostic.refreshOnInsertMode": false,

  "suggest.disableMenu": false,
  "suggest.floatEnable": true,
  "suggest.enablePreview": false,
  "suggest.noselect": true,

  "workspace.bottomUpFiletypes": ["typescript"],
  "workspace.workspaceFolderCheckCwd": false,

  "coc.source.typescript.enable": true,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.messageLevel": "error",
  "coc.preferences.rootPatterns": ["tsconfig.json"],
  "coc.source.file.ignorePatterns": [
    "node_modules"
  ],
  "coc.source.buffer.ignoreGitignore": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "html",
    "handlebars",
    "markdown"
  ],

  "typescript.suggest.enabled": false,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.suggestionActions.enabled": true,
  "typescript.format.enabled": false,
  "typescript.workspaceSymbols.scope": ["currentProject"],

  "list.source.symbols.excludes": ["**/node_modules/**"],
  "list.source.files.excludePatterns": ["**/node_modules/**"],

  "prettier.enable": true,
  "prettier.formatterPriority": 1,
  "prettier.documentSelectors": ["**/*.hbs"],
  "prettier.parser": { "*.hbs": "html" },

  "eslint.enable": false,
  "eslint.format.enable": false,
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onType",
  "eslint.autoFixOnSave": false,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "markdown",
    "json"
  ],

  "html.autoClosingTags": false,
  "html.format.wrapAttributes": false
}
