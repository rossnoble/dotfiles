{
  "$schema": "http://json-schema.org/draft-06/schema",
  "description": "Configuration file for coc.nvim",
  "additionalProperties": false,
  "http.proxySupport": "off",
  "signature.enabled": true,

  "tsserver.enable": true,
  // "tsserver.log": "verbose",
  "tsserver.formatOnType": true,
  "tsserver.autoFixOnSave": true,
  // "tsserver.tsdk": ".yarn/sdks/typescript/lib",

  "diagnostic.enabled": true,
  "diagnostic.refreshOnInsertMode": false,

  // "suggest.autoTrigger": "none",
  "suggest.autoTrigger": "trigger",
  "suggest.disableMenu": false,
  "suggest.floatEnable": true,
  // Don't pre-select first suggestion
  "suggest.noselect": true,

  "workspace.bottomUpFiletypes": ["typescript"],
  "workspace.workspaceFolderCheckCwd": false,

  "coc.source.typescript.enable": true,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.messageLevel": "error",
  "coc.preferences.rootPatterns": ["tsconfig.json"],
  "coc.source.file.ignorePatterns": [
    "node_modules"
  ],
  "coc.source.buffer.ignoreGitignore": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "html",
    "liquid",
    "handlebars",
    "astro",
    "css"
  ],

  "typescript.suggest.enabled": true,
  "typescript.suggestionActions.enabled": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.format.enabled": true,
  "typescript.workspaceSymbols.scope": ["currentProject"],

  "list.source.symbols.excludes": ["**/node_modules/**"],
  "list.source.files.excludePatterns": ["**/node_modules/**"],

  "prettier.enable": true,
  "prettier.bracketSpacing": true,
  "prettier.formatterPriority": 1,
  "prettier.documentSelectors": ["**/*.hbs"],
  "prettier.parser": { "*.hbs": "html" },

  "eslint.packageManager": "yarn",
  // "eslint.nodePath": ".yarn/sdks",
  "eslint.enable": true,
  "eslint.format.enable": false,
  "eslint.alwaysShowStatus": true,
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "markdown",
    "json"
  ],

  "html.autoClosingTags": false,
  "html.format.wrapAttributes": false

  // Solar Graph for Ruby
  // "solargraph.completion": true,
  // "solargraph.formatting": true,
  // "solargraph.commandPath": "~/.gem/ruby/2.7.7/gems/solargraph-0.49.0/bin/solargraph"
}
